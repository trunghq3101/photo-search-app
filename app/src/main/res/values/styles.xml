<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_dark_theme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="headline_dark_theme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="search_view_style" parent="Widget.AppCompat.Light.SearchView">
        <item name="layout">@layout/search_view_layout</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="suggestionRowLayout">@layout/search_suggestion_layout</item>
    </style>
    <style name="toolbar_style" parent="Widget.AppCompat.Toolbar">
        <item name="titleMargin">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
    </style>
</resources>